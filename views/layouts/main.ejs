<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'MYASRAMA' %></title>
    <link rel="icon" type="image/png" href="/image/logounand.png">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="/js/notificationManager.js"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            50: '#f0f9ff',
                            100: '#e0f2fe',
                            500: '#0ea5e9',
                            600: '#0284c7',
                            700: '#0369a1',
                        },
                        purple: {
                            500: '#8b5cf6',
                            600: '#7c3aed',
                            700: '#6d28d9',
                        }
                    }
                }
            }
        }
    </script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-50 font-sans">
    <!-- Include Sidebar Component -->
    <%- include('../components/sidebar', { 
        activeMenu: activeMenu || 'dashboard',
        user:user || { name: 'Penghuni', role: 'Tamu', avatar: 'T' }
    }) %>

    

    <!-- Mobile Overlay -->
    <div id="mobile-overlay" class="fixed inset-0 bg-black bg-opacity-50 z-40 hidden lg:hidden"></div>

    <!-- Main Content -->
    <div id="main-content" class="lg:ml-64  transition-all duration-300">
        <!-- Include Header Component -->
        <%- include('../components/header', { 
            user: user || { name: 'Penghuni', role: 'Tamu', avatar: 'T' },
            pageTitle: pageTitle || ''
        }) %>

        <!-- Page Content -->
        <main class="p-6">
            <%- body %>
        </main>
    </div>

    <!-- Include JavaScript -->
    <%- include('../components/scripts') %>
</body>
</html>