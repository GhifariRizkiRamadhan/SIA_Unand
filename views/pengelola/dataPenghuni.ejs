<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Data Penghuni - SIA Asrama Unand</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    
    <style>
        /* DataTables Customization */
        .dataTables_wrapper {
            font-size: 0.875rem;
        }
        
        .dataTables_wrapper .dataTables_length,
        .dataTables_wrapper .dataTables_filter,
        .dataTables_wrapper .dataTables_info,
        .dataTables_wrapper .dataTables_paginate {
            font-size: 0.875rem;
        }
        
        .dataTables_wrapper .dataTables_length select {
            border: 1px solid #d1d5db;
            border-radius: 0.375rem;
            padding: 0.375rem 0.75rem;
            font-size: 0.875rem;
        }
        
        .dataTables_wrapper .dataTables_filter input {
            border: 1px solid #d1d5db;
            border-radius: 0.375rem;
            padding: 0.375rem 0.75rem;
            margin-left: 0.5rem;
            font-size: 0.875rem;
        }
        
        .dataTables_wrapper .dataTables_paginate .paginate_button {
            padding: 0.375rem 0.75rem;
            margin: 0 0.125rem;
            border: 1px solid #d1d5db;
            border-radius: 0.375rem;
            font-size: 0.875rem;
        }
        
        .dataTables_wrapper .dataTables_paginate .paginate_button.current {
            background: #3b82f6;
            color: white !important;
            border-color: #3b82f6;
        }
        
        .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
            background: #3b82f6;
            color: white !important;
        }
        
        table.dataTable {
            font-size: 0.875rem;
        }
        
        table.dataTable thead th {
            background-color: #f9fafb;
            font-weight: 600;
            padding: 0.75rem 1rem;
            font-size: 0.8125rem;
            text-transform: uppercase;
            letter-spacing: 0.025em;
            color: #374151;
        }
        
        table.dataTable tbody td {
            padding: 0.75rem 1rem;
            vertical-align: middle;
        }
        
        table.dataTable tbody tr:hover {
            background-color: #f9fafb;
        }
        
        /* Compact Avatar */
        .avatar-sm {
            width: 2.5rem;
            height: 2.5rem;
        }
        
        /* Compact Badge */
        .badge-sm {
            padding: 0.25rem 0.625rem;
            font-size: 0.75rem;
            font-weight: 600;
        }
        
        /* Compact Button */
        .btn-sm {
            padding: 0.375rem 0.625rem;
            font-size: 0.8125rem;
        }
        
        /* Section Header */
        .section-header {
            padding: 0.875rem 1.25rem;
            font-size: 1rem;
            font-weight: 600;
        }
    </style>
</head>
<body class="bg-gray-50">
    <div class="container mx-auto px-4 py-6">
        <!-- Header -->
        <div class="flex justify-between items-center mb-6">
            <div>
                <h1 class="text-2xl font-bold text-gray-800">Data Penghuni</h1>
                <p class="text-sm text-gray-500 mt-1">Kelola data penghuni asrama</p>
            </div>
            <button onclick="openModalTambah()" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2.5 rounded-lg shadow-sm transition duration-150 flex items-center text-sm font-medium">
                <i class="fas fa-plus mr-2 text-xs"></i>Tambah Penghuni
            </button>
        </div>

        <!-- Alert Messages -->
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="bg-red-50 border-l-4 border-red-500 text-red-700 p-3.5 mb-4 rounded-md shadow-sm flex items-center justify-between text-sm" id="alertError">
                <div class="flex items-center">
                    <i class="fas fa-exclamation-circle mr-2.5 text-base"></i>
                    <span><%= error %></span>
                </div>
                <button onclick="document.getElementById('alertError').remove()" class="text-red-700 hover:text-red-900">
                    <i class="fas fa-times text-sm"></i>
                </button>
            </div>
        <% } %>

        <% if (typeof success !== 'undefined' && success) { %>
            <div class="bg-green-50 border-l-4 border-green-500 text-green-700 p-3.5 mb-4 rounded-md shadow-sm flex items-center justify-between text-sm" id="alertSuccess">
                <div class="flex items-center">
                    <i class="fas fa-check-circle mr-2.5 text-base"></i>
                    <span><%= success %></span>
                </div>
                <button onclick="document.getElementById('alertSuccess').remove()" class="text-green-700 hover:text-green-900">
                    <i class="fas fa-times text-sm"></i>
                </button>
            </div>
        <% } %>

        <!-- Tabel Penghuni Aktif -->
        <div class="bg-white rounded-lg shadow-sm mb-6 border border-gray-200">
            <div class="bg-gradient-to-r from-green-600 to-green-700 text-white section-header flex items-center justify-between rounded-t-lg">
                <h2 class="flex items-center">
                    <i class="fas fa-users mr-2.5 text-sm"></i>Penghuni Aktif
                    <span class="ml-2.5 bg-white text-green-700 px-2.5 py-0.5 rounded-full text-xs font-bold"><%= penghuniAktif.length %></span>
                </h2>
            </div>

            <div class="p-5">
                <div class="overflow-x-auto">
                    <table class="w-full" id="tableAktif">
                        <thead>
                            <tr class="border-b border-gray-200">
                                <th class="text-center w-12">No</th>
                                <th class="text-center w-16">Foto</th>
                                <th class="text-left">Nama</th>
                                <th class="text-left w-32">NIM</th>
                                <th class="text-left">Jurusan</th>
                                <th class="text-center w-20">KIP-K</th>
                                <th class="text-center w-28">Aksi</th>
                            </tr>
                        </thead>
                        <tbody class="text-gray-700">
                            <% if (penghuniAktif.length === 0) { %>
                                <tr>
                                    <td colspan="7" class="text-center py-16 text-gray-400">
                                        <i class="fas fa-inbox text-5xl mb-3 block text-gray-300"></i>
                                        <p class="text-sm font-medium">Belum ada data penghuni aktif</p>
                                    </td>
                                </tr>
                            <% } else { %>
                                <% for(var i = 0; i < penghuniAktif.length; i++) {
                                    var penghuni = penghuniAktif[i];
                                %>
                                    <tr class="border-b border-gray-100 hover:bg-gray-50 transition">
                                        <td class="text-center text-gray-500"><%= i + 1 %></td>
                                        <td class="text-center">
                                            <% if (penghuni.foto) { %>
                                                <img src="<%= penghuni.foto %>" alt="<%= penghuni.nama %>"
                                                    class="avatar-sm rounded-full object-cover mx-auto border-2 border-gray-200">
                                            <% } else { %>
                                                <div class="avatar-sm rounded-full bg-gradient-to-br from-blue-500 to-blue-600 text-white flex items-center justify-center mx-auto text-sm font-semibold">
                                                    <%= penghuni.nama.charAt(0).toUpperCase() %>
                                                </div>
                                            <% } %>
                                        </td>
                                        <td class="font-medium text-gray-800"><%= penghuni.nama %></td>
                                        <td class="text-gray-600"><%= penghuni.nim %></td>
                                        <td class="text-gray-600"><%= penghuni.jurusan || '-' %></td>
                                        <td class="text-center">
                                            <% if (penghuni.kipk === 'ya') { %>
                                                <span class="inline-flex items-center bg-green-100 text-green-700 badge-sm rounded-full">
                                                    <i class="fas fa-check-circle mr-1 text-xs"></i>Ya
                                                </span>
                                            <% } else { %>
                                                <span class="inline-flex items-center bg-red-100 text-red-700 badge-sm rounded-full">
                                                    <i class="fas fa-times-circle mr-1 text-xs"></i>Tidak
                                                </span>
                                            <% } %>
                                        </td>
                                        <td class="text-center">
                                            <div class="flex items-center justify-center space-x-1.5">
                                                <button onclick="editPenghuni(<%= penghuni.mahasiswa_id %>)"
                                                    class="bg-blue-500 hover:bg-blue-600 text-white btn-sm rounded-md transition"
                                                    title="Edit">
                                                    <i class="fas fa-edit text-xs"></i>
                                                </button>
                                                <button onclick="toggleStatus(<%= penghuni.mahasiswa_id %>, 'tidak aktif')"
                                                    class="bg-yellow-500 hover:bg-yellow-600 text-white btn-sm rounded-md transition"
                                                    title="Nonaktifkan">
                                                    <i class="fas fa-user-slash text-xs"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                <% } %>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Tabel Penghuni Tidak Aktif -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200">
            <div class="bg-gradient-to-r from-gray-600 to-gray-700 text-white section-header flex items-center justify-between rounded-t-lg">
                <h2 class="flex items-center">
                    <i class="fas fa-user-slash mr-2.5 text-sm"></i>Penghuni Tidak Aktif
                    <span class="ml-2.5 bg-white text-gray-700 px-2.5 py-0.5 rounded-full text-xs font-bold"><%= penghuniTidakAktif.length %></span>
                </h2>
            </div>

            <div class="p-5">
                <div class="overflow-x-auto">
                    <table class="w-full" id="tableTidakAktif">
                        <thead>
                            <tr class="border-b border-gray-200">
                                <th class="text-center w-12">No</th>
                                <th class="text-center w-16">Foto</th>
                                <th class="text-left">Nama</th>
                                <th class="text-left w-32">NIM</th>
                                <th class="text-left">Jurusan</th>
                                <th class="text-center w-20">KIP-K</th>
                                <th class="text-center w-28">Aksi</th>
                            </tr>
                        </thead>
                        <tbody class="text-gray-700">
                            <% if (penghuniTidakAktif.length === 0) { %>
                                <tr>
                                    <td colspan="7" class="text-center py-16 text-gray-400">
                                        <i class="fas fa-inbox text-5xl mb-3 block text-gray-300"></i>
                                        <p class="text-sm font-medium">Belum ada data penghuni tidak aktif</p>
                                    </td>
                                </tr>
                            <% } else { %>
                                <% for(var i = 0; i < penghuniTidakAktif.length; i++) {
                                    var penghuni = penghuniTidakAktif[i];
                                %>
                                    <tr class="border-b border-gray-100 hover:bg-gray-50 transition">
                                        <td class="text-center text-gray-500"><%= i + 1 %></td>
                                        <td class="text-center">
                                            <% if (penghuni.foto) { %>
                                                <img src="<%= penghuni.foto %>" alt="<%= penghuni.nama %>"
                                                    class="avatar-sm rounded-full object-cover mx-auto border-2 border-gray-200 opacity-50">
                                            <% } else { %>
                                                <div class="avatar-sm rounded-full bg-gray-400 text-white flex items-center justify-center mx-auto text-sm font-semibold opacity-50">
                                                    <%= penghuni.nama.charAt(0).toUpperCase() %>
                                                </div>
                                            <% } %>
                                        </td>
                                        <td class="font-medium text-gray-500"><%= penghuni.nama %></td>
                                        <td class="text-gray-400"><%= penghuni.nim %></td>
                                        <td class="text-gray-400"><%= penghuni.jurusan || '-' %></td>
                                        <td class="text-center">
                                            <% if (penghuni.kipk === 'ya') { %>
                                                <span class="inline-flex items-center bg-green-100 text-green-700 badge-sm rounded-full opacity-60">
                                                    <i class="fas fa-check-circle mr-1 text-xs"></i>Ya
                                                </span>
                                            <% } else { %>
                                                <span class="inline-flex items-center bg-red-100 text-red-700 badge-sm rounded-full opacity-60">
                                                    <i class="fas fa-times-circle mr-1 text-xs"></i>Tidak
                                                </span>
                                            <% } %>
                                        </td>
                                        <td class="text-center">
                                            <div class="flex items-center justify-center space-x-1.5">
                                                <button onclick="editPenghuni(<%= penghuni.mahasiswa_id %>)"
                                                    class="bg-blue-500 hover:bg-blue-600 text-white btn-sm rounded-md transition"
                                                    title="Edit">
                                                    <i class="fas fa-edit text-xs"></i>
                                                </button>
                                                <button onclick="toggleStatus(<%= penghuni.mahasiswa_id %>, 'aktif')"
                                                    class="bg-green-500 hover:bg-green-600 text-white btn-sm rounded-md transition"
                                                    title="Aktifkan">
                                                    <i class="fas fa-user-check text-xs"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                <% } %>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Tambah -->
    <div id="modalTambah" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
        <div class="bg-white rounded-lg shadow-xl max-w-lg w-full max-h-[90vh] overflow-y-auto">
            <form action="/pengelola/dataPenghuni/tambah" method="POST" enctype="multipart/form-data" id="formTambah">
                <div class="bg-blue-600 text-white px-5 py-3.5 flex justify-between items-center rounded-t-lg">
                    <h3 class="text-lg font-semibold flex items-center">
                        <i class="fas fa-plus mr-2.5 text-sm"></i>Tambah Data Penghuni
                    </h3>
                    <button type="button" onclick="closeModalTambah()" class="text-white hover:text-gray-200 transition">
                        <i class="fas fa-times text-lg"></i>
                    </button>
                </div>

                <div class="p-5 space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1.5">
                            Nama Lengkap <span class="text-red-500">*</span>
                        </label>
                        <input type="text" name="nama" required
                            class="w-full px-3.5 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                            placeholder="Masukkan nama lengkap">
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1.5">
                                NIM <span class="text-red-500">*</span>
                            </label>
                            <input type="text" name="nim" required
                                class="w-full px-3.5 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                placeholder="Nomor Induk">
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1.5">
                                Status KIP-K <span class="text-red-500">*</span>
                            </label>
                            <select name="kipk"
                                class="w-full px-3.5 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                                <option value="ya" selected>Ya</option>
                                <option value="tidak">Tidak</option>
                            </select>
                        </div>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1.5">
                            Jurusan <span class="text-red-500">*</span>
                        </label>
                        <input type="text" name="jurusan" required
                            class="w-full px-3.5 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                            placeholder="Contoh: Teknik Informatika">
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1.5">
                            Status Penghuni <span class="text-red-500">*</span>
                        </label>
                        <select name="status"
                            class="w-full px-3.5 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <option value="aktif">Aktif</option>
                            <option value="tidak aktif">Tidak Aktif</option>
                        </select>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1.5">Foto Mahasiswa</label>
                        <input type="file" name="foto" accept="image/jpeg,image/jpg,image/png"
                            onchange="previewImageTambah(event)"
                            class="w-full px-3.5 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <p class="text-xs text-gray-500 mt-1.5">Format: JPG, JPEG, PNG (Maks. 2MB)</p>
                        
                        <div id="previewTambah" class="mt-3 hidden">
                            <img id="imgPreviewTambah" src="" alt="Preview"
                                class="w-32 h-32 object-cover rounded-lg border-2 border-gray-300 mx-auto">
                        </div>
                    </div>

                    <div class="bg-blue-50 border border-blue-200 rounded-md p-3">
                        <div class="flex">
                            <i class="fas fa-info-circle text-blue-500 mt-0.5 mr-2 text-sm"></i>
                            <div class="text-xs text-gray-700">
                                <p class="font-semibold mb-1">Informasi:</p>
                                <ul class="space-y-0.5 text-gray-600">
                                    <li>• Email default: [NIM]@student.unand.ac.id</li>
                                    <li>• Password default: [NIM]</li>
                                    <li>• Status KIP-K default: Ya</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="bg-gray-50 px-5 py-3.5 flex justify-end space-x-2 rounded-b-lg border-t border-gray-200">
                    <button type="button" onclick="closeModalTambah()"
                        class="px-4 py-2 text-sm font-medium bg-white border border-gray-300 hover:bg-gray-50 text-gray-700 rounded-md transition">
                        <i class="fas fa-times mr-1.5 text-xs"></i>Batal
                    </button>
                    <button type="submit"
                        class="px-4 py-2 text-sm font-medium bg-blue-600 hover:bg-blue-700 text-white rounded-md transition">
                        <i class="fas fa-save mr-1.5 text-xs"></i>Simpan
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Modal Edit -->
    <div id="modalEdit" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
        <div class="bg-white rounded-lg shadow-xl max-w-lg w-full max-h-[90vh] overflow-y-auto">
            <form action="/pengelola/dataPenghuni/edit" method="POST" enctype="multipart/form-data" id="formEdit">
                <div class="bg-blue-600 text-white px-5 py-3.5 flex justify-between items-center rounded-t-lg">
                    <h3 class="text-lg font-semibold flex items-center">
                        <i class="fas fa-edit mr-2.5 text-sm"></i>Edit Data Penghuni
                    </h3>
                    <button type="button" onclick="closeModalEdit()" class="text-white hover:text-gray-200 transition">
                        <i class="fas fa-times text-lg"></i>
                    </button>
                </div>

                <div class="p-5 space-y-4">
                    <input type="hidden" id="edit_mahasiswa_id" name="mahasiswa_id">

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1.5">
                            Nama Lengkap <span class="text-red-500">*</span>
                        </label>
                        <input type="text" id="edit_nama" name="nama" required
                            class="w-full px-3.5 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1.5">
                                NIM <span class="text-red-500">*</span>
                            </label>
                            <input type="text" id="edit_nim" name="nim" required
                                class="w-full px-3.5 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1.5">
                                Status KIP-K <span class="text-red-500">*</span>
                            </label>
                            <select id="edit_kipk" name="kipk"
                                class="w-full px-3.5 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                                <option value="ya">Ya</option>
                                <option value="tidak">Tidak</option>
                            </select>
                        </div>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1.5">
                            Jurusan <span class="text-red-500">*</span>
                        </label>
                        <input type="text" id="edit_jurusan" name="jurusan" required
                            class="w-full px-3.5 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1.5">
                            Status Penghuni <span class="text-red-500">*</span>
                        </label>
                        <select id="edit_status" name="status"
                            class="w-full px-3.5 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                            <option value="aktif">Aktif</option>
                            <option value="tidak aktif">Tidak Aktif</option>
                        </select>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1.5">Foto Mahasiswa</label>
                        <input type="file" id="edit_foto" name="foto" accept="image/jpeg,image/jpg,image/png"
                            onchange="previewImageEdit(event)"
                            class="w-full px-3.5 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <p class="text-xs text-gray-500 mt-1.5">Kosongkan jika tidak ingin mengubah foto</p>
                        
                        <div id="currentPhoto" class="mt-3 hidden">
                            <label class="block text-xs font-medium text-gray-600 mb-1.5">Foto Saat Ini:</label>
                            <img id="imgCurrentPhoto" src="" alt="Current"
                                class="w-32 h-32 object-cover rounded-lg border-2 border-gray-300 mx-auto">
                        </div>
                        
                        <div id="previewEdit" class="mt-3 hidden">
                            <label class="block text-xs font-medium text-gray-600 mb-1.5">Preview Foto Baru:</label>
                            <img id="imgPreviewEdit" src="" alt="Preview"
                                class="w-32 h-32 object-cover rounded-lg border-2 border-blue-500 mx-auto">
                        </div>
                    </div>
                </div>

                <div class="bg-gray-50 px-5 py-3.5 flex justify-end space-x-2 rounded-b-lg border-t border-gray-200">
                    <button type="button" onclick="closeModalEdit()"
                        class="px-4 py-2 text-sm font-medium bg-white border border-gray-300 hover:bg-gray-50 text-gray-700 rounded-md transition">
                        <i class="fas fa-times mr-1.5 text-xs"></i>Batal
                    </button>
                    <button type="submit"
                        class="px-4 py-2 text-sm font-medium bg-blue-600 hover:bg-blue-700 text-white rounded-md transition">
                        <i class="fas fa-save mr-1.5 text-xs"></i>Update
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function() {
            $('#tableAktif').DataTable({
                language: { url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/id.json' },
                pageLength: 10,
                order: [[2, 'asc']],
                columnDefs: [
                    { orderable: false, targets: [1, 6] }
                ]
            });

            $('#tableTidakAktif').DataTable({
                language: { url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/id.json' },
                pageLength: 10,
                order: [[2, 'asc']],
                columnDefs: [
                    { orderable: false, targets: [1, 6] }
                ]
            });

            setTimeout(function() {
                $('#alertError, #alertSuccess').fadeOut('slow');
            }, 5000);
        });

        function openModalTambah() {
            document.getElementById('modalTambah').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeModalTambah() {
            document.getElementById('modalTambah').classList.add('hidden');
            document.getElementById('formTambah').reset();
            document.getElementById('previewTambah').classList.add('hidden');
            document.body.style.overflow = 'auto';
        }

        function openModalEdit() {
            document.getElementById('modalEdit').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeModalEdit() {
            document.getElementById('modalEdit').classList.add('hidden');
            document.getElementById('formEdit').reset();
            document.getElementById('previewEdit').classList.add('hidden');
            document.getElementById('currentPhoto').classList.add('hidden');
            document.body.style.overflow = 'auto';
        }

        function previewImageTambah(event) {
            const file = event.target.files[0];
            const preview = document.getElementById('imgPreviewTambah');
            const previewContainer = document.getElementById('previewTambah');
            
            if (file) {
                if (file.size > 2 * 1024 * 1024) {
                    alert('Ukuran file terlalu besar! Maksimal 2MB');
                    event.target.value = '';
                    previewContainer.classList.add('hidden');
                    return;
                }
                
                const allowedTypes = ['image/jpeg', 'image/jpg', 'image/png'];
                if (!allowedTypes.includes(file.type)) {
                    alert('Format file tidak didukung! Gunakan JPG, JPEG, atau PNG');
                    event.target.value = '';
                    previewContainer.classList.add('hidden');
                    return;
                }
                
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    previewContainer.classList.remove('hidden');
                };
                reader.readAsDataURL(file);
            } else {
                previewContainer.classList.add('hidden');
            }
        }

        function previewImageEdit(event) {
            const file = event.target.files[0];
            const preview = document.getElementById('imgPreviewEdit');
            const previewContainer = document.getElementById('previewEdit');
            
            if (file) {
                if (file.size > 2 * 1024 * 1024) {
                    alert('Ukuran file terlalu besar! Maksimal 2MB');
                    event.target.value = '';
                    previewContainer.classList.add('hidden');
                    return;
                }
                
                const allowedTypes = ['image/jpeg', 'image/jpg', 'image/png'];
                if (!allowedTypes.includes(file.type)) {
                    alert('Format file tidak didukung! Gunakan JPG, JPEG, atau PNG');
                    event.target.value = '';
                    previewContainer.classList.add('hidden');
                    return;
                }
                
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    previewContainer.classList.remove('hidden');
                };
                reader.readAsDataURL(file);
            } else {
                previewContainer.classList.add('hidden');
            }
        }

        async function editPenghuni(id) {
            try {
                const response = await fetch('/pengelola/dataPenghuni/get/' + id);
                const result = await response.json();
                
                if (result.success) {
                    const data = result.data;
                    
                    document.getElementById('edit_mahasiswa_id').value = data.mahasiswa_id;
                    document.getElementById('edit_nama').value = data.nama;
                    document.getElementById('edit_nim').value = data.nim;
                    document.getElementById('edit_jurusan').value = data.jurusan || '';
                    document.getElementById('edit_status').value = data.status;
                    document.getElementById('edit_kipk').value = data.kipk || 'ya';
                    
                    const currentPhoto = document.getElementById('currentPhoto');
                    const imgCurrent = document.getElementById('imgCurrentPhoto');
                    if (data.foto) {
                        imgCurrent.src = data.foto;
                        currentPhoto.classList.remove('hidden');
                    } else {
                        currentPhoto.classList.add('hidden');
                    }
                    
                    document.getElementById('previewEdit').classList.add('hidden');
                    document.getElementById('edit_foto').value = '';
                    
                    openModalEdit();
                } else {
                    alert('Gagal mengambil data: ' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Terjadi kesalahan saat mengambil data');
            }
        }

        function toggleStatus(id, newStatus) {
            const message = newStatus === 'aktif'
                ? 'Apakah Anda yakin ingin mengaktifkan penghuni ini?'
                : 'Apakah Anda yakin ingin menonaktifkan penghuni ini?';
            
            if (confirm(message)) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '/pengelola/dataPenghuni/toggle/' + id;
                document.body.appendChild(form);
                form.submit();
            }
        }

        document.getElementById('modalTambah').addEventListener('click', function(e) {
            if (e.target === this) closeModalTambah();
        });

        document.getElementById('modalEdit').addEventListener('click', function(e) {
            if (e.target === this) closeModalEdit();
        });

        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeModalTambah();
                closeModalEdit();
            }
        });
    </script>
</body>
