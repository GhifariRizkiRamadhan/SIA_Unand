                } else {
                    actionButtons += ` <button disabled class="bg-gray-300 text-gray-500 px-3 py-1 rounded text-xs font-medium cursor-not-allowed">
                        <i class="fas fa-clock mr-1"></i>Menunggu Upload
                    </button>`;
                }
                break;
                
            case 'verifikasi_pembayaran':
                actionButtons += ` <button onclick="openPaymentVerificationModal(${submission.id}, '${submission.name}')" class="bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded text-xs font-medium transition-colors">
                    <i class="fas fa-search mr-1"></i>Verifikasi Bayar
                </button>`;
                break;
                
            case 'selesai':
                actionButtons += ` <button disabled class="bg-gray-300 text-gray-500 px-3 py-1 rounded text-xs font-medium cursor-not-allowed">
                    <i class="fas fa-check-circle mr-1"></i>Selesai
                </button>`;
