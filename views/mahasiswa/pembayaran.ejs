<body class="lg:ml-52 bg-gray-50">
    <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
            <div class="bg-gradient-to-br from-purple-600 via-blue-600 to-indigo-800 px-6 py-4">
                <h2 class="text-lg font-semibold text-white">Konfirmasi Pembayaran</h2>
                <p class="text-sm text-purple-200">Untuk Pengajuan: <%= pengajuan.nomor_pengajuan %></p>
            </div>

            <div class="p-6">
                <form id="payment-form" enctype="multipart/form-data">
                    <input type="hidden" id="pembayaran-id" name="id" value="<%= pengajuan.pembayaran[0]?.pembayaran_id %>">
                    
                    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-6">
                        <div class="space-y-6">
                            <div>
                                <h3 class="text-sm font-semibold text-gray-900 mb-4">Detail Mahasiswa</h3>
                                <div class="space-y-4">
                                    <div class="flex justify-between items-center py-2 border-b border-gray-100">
                                        <span class="text-gray-600 text-sm">Nama</span>
                                        <span class="font-medium text-gray-900"><%= pengajuan.mahasiswa.nama %></span>
                                    </div>
                                    <div class="flex justify-between items-center py-2 border-b border-gray-100">
                                        <span class="text-gray-600 text-sm">NIM</span>
                                        <span class="font-medium text-gray-900"><%= pengajuan.mahasiswa?.nim || 'N/A' %></span>
                                    </div>
                                    <div class="flex justify-between items-center py-2 border-b border-gray-100">
                                        <span class="text-gray-600 text-sm">Status Pengajuan</span>
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                            <%= pengajuan.status_pengajuan.replace('_', ' ') %>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <h3 class="text-sm font-semibold text-gray-900 mb-4">Rincian Biaya</h3>
                                <div class="bg-gray-50 rounded-lg p-4 space-y-3">
                                    <div class="flex justify-between items-center py-2 border-b border-gray-200">
                                        <span class="text-sm font-medium text-gray-900">Biaya Pokok Bebas Asrama</span>
                                        <span class="font-semibold text-gray-900">
                                            <%= new Intl.NumberFormat('id-ID', { style: 'currency', currency: 'IDR' }).format(pengajuan.total_biaya - (pengajuan.biaya_tambahan || 0)) %>
                                        </span>
                                    </div>

                                    <% if (pengajuan.kerusakanFasilitas && pengajuan.kerusakanFasilitas.length > 0) { %>
                                        <div class="py-2 border-b border-gray-200">
                                            <span class="text-sm font-semibold text-gray-900">Biaya Tambahan (Kerusakan):</span>
                                            <div class="pl-4 mt-2 space-y-1">
                                                <% pengajuan.kerusakanFasilitas.forEach(item => { %>
                                                    <div class="flex justify-between items-center">
                                                        <span class="text-gray-900 text-sm font-semibold">- <%= item.nama_fasilitas %></span>
                                                        <span class="font-medium text-red-600">
                                                            + <%= new Intl.NumberFormat('id-ID', { style: 'currency', currency: 'IDR' }).format(item.biaya_kerusakan) %>
                                                        </span>
                                                    </div>
                                                <% }) %>
                                            </div>
                                        </div>
                                    <% } %>

                                    <div class="flex justify-between items-center pt-3 border-t-2 border-purple-200">
                                        <span class="text-base font-bold text-gray-900">Total Pembayaran</span>
                                        <span class="text-lg font-bold text-green-600">
                                            <%= new Intl.NumberFormat('id-ID', { style: 'currency', currency: 'IDR' }).format(pengajuan.total_biaya) %>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="space-y-6">

                            

                                        <!-- Bank Transfer Info -->
                        <div class="bg-blue-50 rounded-lg p-4 border border-blue-200">
                            <h4 class="font-semibold text-blue-900 mb-2 text-sm">Transfer ke rekening Asrama:</h4>
                            <div class="text-center">
                                <div class="inline-flex items-center space-x-2 bg-white rounded-lg px-4 py-3 border border-blue-300">
                                    <i class="fab fa-cc-mastercard text-blue-700 text-2xl mr-2"></i>
                                        <span class="font-bold text-blue-900 ">BRI</span>
                                    <span class="font-mono text-xl font-bold text-gray-900 tracking-wider">
                                        <%= '5201 9258 3647 021' %>
                                    </span>
                                    <button type="button" onclick="copyToClipboard('5201 9258 3647 021')" 
                                            class="text-blue-600 hover:text-blue-800 ml-2">
                                        <i class="fas fa-copy"></i>
                                    </button>
                                </div>
                            </div>
                            <p class="text-sm text-blue-700 text-center mt-2">a.n. Asrama Universitas Andalas</p>
                            <div class="mt-3 text-center">
                                <p class="text-xs text-blue-600">Kode Virtual Account (Opsional):</p>
                                <p class="font-mono text-sm font-bold text-blue-900"><%= pengajuan.nim || '1234567890' %>5000</p>
                            </div>
                        </div>
                        <div>
                                <h3 class="text-sm font-semibold text-gray-900 mb-4">Unggah Bukti Pembayaran</h3>
                                <div class="space-y-4">
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 mb-2">Pilih File <span class="text-red-500">*</span></label>
                                        <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-lg hover:border-purple-400 transition-colors">
                                            <div class="space-y-1 text-center">
                                                <div id="upload-icon" class="mx-auto h-12 w-12 text-gray-400"><i class="fas fa-cloud-upload-alt text-4xl"></i></div>
                                                <div class="flex text-sm text-gray-600">
                                                    <label for="file-upload" class="relative cursor-pointer bg-white rounded-md font-medium text-purple-600 hover:text-purple-500">
                                                        <span>Upload bukti transfer</span>
                                                        <input id="file-upload" name="bukti" type="file" accept="image/jpeg,image/png,application/pdf" class="sr-only" required>
                                                    </label>
                                                    <p class="pl-1">atau drag and drop</p>
                                                </div>
                                                <p class="text-xs text-gray-500">PNG, JPG, PDF hingga 5MB</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div id="file-preview" class="hidden">
                                        </div>
                                </div>
                            </div>
                    </div>
                    
                        </div>
                        <div class="flex flex-col sm:flex-row gap-4 pt-6 border-t border-gray-200">
                        <button type="button" onclick="window.history.back()" class="flex-1 px-6 py-3 border border-gray-300 rounded-lg text-gray-700 font-medium hover:bg-gray-50">Batal</button>
                        <button type="submit" id="submit-btn" class="flex-1 px-6 py-3 bg-purple-600 text-white font-medium rounded-lg hover:bg-purple-700">Kirim Konfirmasi</button>
                    </div> 
                    </div>
        
                    
                </form>
            </div>
        </div>
    </div>
<div id="loading-modal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center">
    <div class="bg-white rounded-xl p-8 max-w-sm w-full mx-4">
        <div class="text-center">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-purple-600 mx-auto mb-4"></div>
            <h3 class="text-sm font-semibold text-gray-900 mb-2">Mengunggah Bukti Pembayaran...</h3>
            <p class="text-gray-600">Mohon tunggu sebentar...</p>
        </div>
    </div>
</div>

<div id="success-modal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center">
    <div class="bg-white rounded-xl p-8 max-w-md w-full mx-4">
        <div class="text-center">
            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <i class="fas fa-check text-green-600 text-2xl"></i>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Berhasil!</h3>
            <p class="text-gray-600 mb-6">Konfirmasi pembayaran Anda telah dikirim dan akan segera diproses oleh admin.</p>
            <button onclick="redirectToBebasAsrama()" 
                    class="w-full bg-green-600 text-white py-2 px-4 rounded-lg hover:bg-green-700 transition-colors">
                Kembali ke Halaman Riwayat
            </button>
        </div>
    </div>
</div>

<script>

const paymentForm = document.getElementById('payment-form');
const fileInput = document.getElementById('file-upload');
const filePreview = document.getElementById('file-preview');
const uploadIcon = document.getElementById('upload-icon');
const submitBtn = document.getElementById('submit-btn');
const loadingModal = document.getElementById('loading-modal');
const successModal = document.getElementById('success-modal');
const uploadArea = document.querySelector('.border-dashed');

paymentForm.addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const pembayaranId = document.getElementById('pembayaran-id').value;
    
    if (!pembayaranId || pembayaranId === 'undefined' || pembayaranId === '') {
        alert('Data pembayaran tidak valid. Silakan refresh halaman atau hubungi administrator.');
        return;
    }
    
    if (!fileInput.files || fileInput.files.length === 0) {
        alert('Silakan pilih file bukti pembayaran terlebih dahulu.');
        return;
    }
    
    loadingModal.classList.remove('hidden');
    submitBtn.disabled = true;

    const formData = new FormData(paymentForm);

    try {

        const response = await fetch(`/api/pembayaran/${pembayaranId}/reupload`, {
            method: 'PUT',
            body: formData,
        });

        const contentType = response.headers.get('content-type');
        if (!contentType || !contentType.includes('application/json')) {
            throw new Error('Server mengembalikan response yang tidak valid. Silakan coba lagi.');
        }

        const result = await response.json();
        
        if (!response.ok) {
            throw new Error(result.message || 'Gagal mengunggah bukti pembayaran.');
        }

        // Berhasil upload
        loadingModal.classList.add('hidden');
        successModal.classList.remove('hidden');

    } catch (error) {
        console.error('Submission error:', error);
        loadingModal.classList.add('hidden');
        
        let errorMessage = error.message;
        if (errorMessage.includes('not valid JSON')) {
            errorMessage = 'Terjadi kesalahan server. Pastikan endpoint API sudah benar.';
        }
        
        alert(`Terjadi kesalahan: ${errorMessage}`);
        submitBtn.disabled = false;
    }
});

    // --- FUNGSI UI: FILE UPLOAD & PREVIEW ---
    fileInput.addEventListener('change', function(e) {
        const file = e.target.files[0];
        if (file) {
            if (file.size > 5 * 1024 * 1024) {
                alert('Ukuran file terlalu besar. Maksimal 5MB.');
                e.target.value = ''; return;
            }
            const allowedTypes = ['image/jpeg', 'image/png', 'application/pdf'];
            if (!allowedTypes.includes(file.type)) {
                alert('Tipe file tidak didukung. Gunakan PNG, JPG, atau PDF.');
                e.target.value = ''; return;
            }
            
            // Tampilkan pratinjau
            filePreview.innerHTML = `
                <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                    <div class="flex items-center space-x-3">
                        <i class="fas fa-file-image text-purple-600 text-xl"></i>
                        <div class="flex-1">
                            <p class="text-sm font-medium text-gray-900">${file.name}</p>
                            <p class="text-xs text-gray-500">${formatFileSize(file.size)}</p>
                        </div>
                        <button type="button" onclick="removeFile()" class="text-red-500 hover:text-red-700"><i class="fas fa-times"></i></button>
                    </div>
                </div>
            `;
            filePreview.classList.remove('hidden');
            uploadIcon.innerHTML = '<i class="fas fa-check-circle text-green-500 text-4xl"></i>';
            submitBtn.disabled = false;
            submitBtn.classList.remove('opacity-50', 'cursor-not-allowed');
        }
    });

    function removeFile() {
        fileInput.value = '';
        filePreview.classList.add('hidden');
        uploadIcon.innerHTML = '<i class="fas fa-cloud-upload-alt text-4xl"></i>';
        submitBtn.disabled = true;
        submitBtn.classList.add('opacity-50', 'cursor-not-allowed');
    }

    // --- FUNGSI UI: DRAG & DROP ---
    ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eName => uploadArea.addEventListener(eName, e => { e.preventDefault(); e.stopPropagation(); }, false));
    ['dragenter', 'dragover'].forEach(eName => uploadArea.addEventListener(eName, () => uploadArea.classList.add('border-purple-400', 'bg-purple-50'), false));
    ['dragleave', 'drop'].forEach(eName => uploadArea.addEventListener(eName, () => uploadArea.classList.remove('border-purple-400', 'bg-purple-50'), false));
    uploadArea.addEventListener('drop', e => {
        fileInput.files = e.dataTransfer.files;
        fileInput.dispatchEvent(new Event('change'));
    }, false);

    // --- FUNGSI HELPER LAINNYA ---
    function formatFileSize(bytes, decimals = 2) {
        if (bytes === 0) return '0 Bytes';
        const k = 1024;
        const dm = decimals < 0 ? 0 : decimals;
        const sizes = ['Bytes', 'KB', 'MB', 'GB'];
        const i = Math.floor(Math.log(bytes) / Math.log(k));
        return parseFloat((bytes / Math.pow(k, i)).toFixed(dm)) + ' ' + sizes[i];
    }
    
    function copyToClipboard(text) {
        navigator.clipboard.writeText(text).then(() => {
            const toast = document.createElement('div');
            toast.className = 'fixed top-4 right-4 bg-green-500 text-white px-4 py-2 rounded-lg shadow-lg z-50';
            toast.textContent = 'Nomor rekening disalin!';
            document.body.appendChild(toast);
            setTimeout(() => toast.remove(), 3000);
        });
    }
    
    function redirectToBebasAsrama() {
        window.location.href = '/mahasiswa/bebas-asrama';
    }

    // --- Inisialisasi Tombol ---
    submitBtn.disabled = true;
    submitBtn.classList.add('opacity-50', 'cursor-not-allowed');
</script>
</body>