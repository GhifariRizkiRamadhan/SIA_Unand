    <!-- modal pengajuan baru -->
    <div id="createModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden items-center justify-center z-50">
        <div class="bg-white rounded-lg p-6 max-w-sm mx-4">
            <div class="flex items-center mb-4">
                <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-blue-100">
                    <i class="fas fa-paper-plane text-blue-600"></i>
                </div>
            </div>
            <div class="text-center">
                <h3 class="text-lg font-medium text-gray-900 mb-2">Buat Pengajuan Baru</h3>
                <p class="text-sm text-gray-500 mb-4">Anda akan membuat pengajuan bebas asrama. Lanjutkan?</p>
                <div class="flex space-x-3 justify-center">
                    <button id="cancelCreate" class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50">
                        Batal
                    </button>
                    <button id="confirmCreate" class="px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md hover:bg-blue-700">
                        Ya, Lanjutkan
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- peringatan hanya dapat mengajukan satu surat bebas asrama -->
    <div id="warningModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden items-center justify-center z-50">
        <div class="bg-white rounded-lg p-6 max-w-sm mx-4">
            <div class="flex items-center mb-4">
                <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-yellow-100">
                    <i class="fas fa-exclamation-triangle text-yellow-500"></i>
                </div>
            </div>
            <div class="text-center">
                <h3 class="text-lg font-medium text-gray-900 mb-2">Pengajuan Gagal</h3>
                <p id="warningMessage" class="text-sm text-gray-500 mb-4">
                    </p>
                <button id="closeWarning" class="w-full px-4 py-2 text-sm font-medium text-white bg-yellow-500 border border-transparent rounded-md hover:bg-yellow-600">
                    Mengerti
                </button>
            </div>
        </div>
    </div>

 <script>
    document.addEventListener('DOMContentLoaded', function() {
        // --- Variabel Global untuk Elemen UI ---
        const deleteModal = document.getElementById('deleteModal');
        const cancelDelete = document.getElementById('cancelDelete');
        const confirmDelete = document.getElementById('confirmDelete');
        const createModal = document.getElementById('createModal');
        const cancelCreate = document.getElementById('cancelCreate');
        const confirmCreate = document.getElementById('confirmCreate');
        const container = document.getElementById('bebas-asrama-container'); 
        
        const warningModal = document.getElementById('warningModal');
        const closeWarning = document.getElementById('closeWarning');
        const warningMessage = document.getElementById('warningMessage');

        let pengajuanIdToDelete = null;

        // --- Inisialisasi ---
        fetchRiwayatPengajuan();
        initializeEventListeners();


        // =================================================================
        // BAGIAN PENGAMBILAN & PENAMPILAN DATA (FETCH & RENDER)
        // =================================================================

        async function fetchRiwayatPengajuan() {
            const mahasiswaId = document.body.dataset.mahasiswaId;
            if (!mahasiswaId) {
                console.error("ID Mahasiswa tidak ditemukan.");
                showEmptyState();
                return;
            }
            try {
                const response = await fetch(`/api/bebas-asrama/mahasiswa/${mahasiswaId}`);
                if (!response.ok) {
                    throw new Error('Gagal memuat data riwayat.');
                }
                const result = await response.json();
                renderTable(result.data);
            } catch (error) {
                console.error("Gagal mengambil data riwayat:", error);
                showEmptyState();
            }
        }


        function renderTable(data) {
            const tbody = document.getElementById('riwayat-table-body');
            tbody.innerHTML = ''; // Cukup kosongkan isinya

            if (!data || data.length === 0) {
                showEmptyState();
                return;
            }

            data.forEach(pengajuan => {
                const row = document.createElement('tr');
                row.className = 'hover:bg-gray-50';
                row.setAttribute('data-id', pengajuan.Surat_id);
                row.innerHTML = generateRowHTML(pengajuan);
                tbody.appendChild(row);
            });
        }
        // =================================================================
        // BAGIAN EVENT HANDLING (EVENT DELEGATION)
        // =================================================================
        
        function initializeEventListeners() {
            if (container) {
                container.addEventListener('click', function(event) {
                    const button = event.target.closest('button');
                    if (!button || button.disabled) return;

                    if (button.matches('button:has(.fa-plus), .create-new-btn')) {
                        showCreateModal();
                        return;
                    }

                    const row = button.closest('tr');
                    if (!row) return;
                    
                    const pengajuanId = row.getAttribute('data-id');
                    if (button.classList.contains('hapus-btn')) {
                        showDeleteModal(pengajuanId);
                    } else if (button.classList.contains('bayar-btn')) {
                        window.location.href = `/mahasiswa/pembayaran/${pengajuanId}`;
                    } else if (button.classList.contains('unduh-btn')) {
                        window.location.href = `/api/bebas-asrama/${pengajuanId}/surat`;
                    }
                });
            }

            cancelDelete.addEventListener('click', hideDeleteModal);
            confirmDelete.addEventListener('click', () => {
                if (pengajuanIdToDelete) deletePengajuan(pengajuanIdToDelete);
            });
            deleteModal.addEventListener('click', (e) => {
                if (e.target === deleteModal) hideDeleteModal();
            });

            cancelCreate.addEventListener('click', hideCreateModal);
            confirmCreate.addEventListener('click', executeCreatePengajuan);
            createModal.addEventListener('click', (e) => {
                if (e.target === createModal) hideCreateModal();
            });

            closeWarning.addEventListener('click', hideWarningModal);
            warningModal.addEventListener('click', (e) => {
                if (e.target === warningModal) hideWarningModal();
            });
        }

        // =================================================================
        // BAGIAN FUNGSI AKSI (CREATE, DELETE)
        // =================================================================

       async function executeCreatePengajuan() {
            hideCreateModal();
            try {
                const response = await fetch('/api/bebas-asrama', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                });

                const result = await response.json();
                
                // Cek jika response TIDAK OK
                if (!response.ok) {
                    // Jika status error adalah 409 (Conflict), tampilkan modal peringatan
                    if (response.status === 409) {
                        showWarningModal(result.message);
                    } else {
                        // Untuk error lainnya, lempar seperti biasa
                        throw new Error(result.message || 'Gagal membuat pengajuan.');
                    }
                    return; // Hentikan eksekusi jika ada error
                }
                
                // Jika berhasil
                showSuccessNotification('Pengajuan baru berhasil dibuat!');
                fetchRiwayatPengajuan();

            } catch (error) {
                console.error('Error saat membuat pengajuan:', error);
                alert(`Terjadi kesalahan: ${error.message}`);
            }
        }

        async function deletePengajuan(pengajuanId) {
            hideDeleteModal();
            try {

                const response = await fetch(`/api/bebas-asrama/${pengajuanId}`, { method: 'DELETE' });

                if (!response.ok) {
                    const result = await response.json();
                    throw new Error(result.message || 'Gagal menghapus pengajuan.');
                }

                showSuccessNotification(`Pengajuan #${pengajuanId} berhasil dihapus.`);
                fetchRiwayatPengajuan();

            } catch (error) {
                console.error('Error saat menghapus:', error);
                alert(`Gagal menghapus: ${error.message}`);
            }
        }
        function checkEmptyTable() {
            // Ambil referensi tbody yang ada saat ini
            const currentTableBody = document.getElementById('riwayat-table-body');
            // Jika tbody tidak ada atau tidak punya anak, tampilkan empty state
            if (!currentTableBody || currentTableBody.children.length === 0) {
                showEmptyState();
            }
        }

        // =================================================================
        // FUNGSI HELPER (UI & FORMATTING)
        // =================================================================

        function generateRowHTML(pengajuan) {
            const formatDate = (d) => new Date(d).toLocaleDateString('id-ID', { day: '2-digit', month: '2-digit', year: 'numeric' });
            const formatCurrency = (a) => new Intl.NumberFormat('id-ID', { style: 'currency', currency: 'IDR', minimumFractionDigits: 0 }).format(a);
            let statusBadge = '', paymentStatus = '', actionButtons = '';

            switch (pengajuan.status_pengajuan) {
                case 'VERIFIKASI_FASILITAS':
                    statusBadge = `<span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-purple-100 text-purple-800"><i class="fas fa-clipboard-check mr-1"></i>Verifikasi Fasilitas</span>`;
                    paymentStatus = `<span class="text-sm text-gray-600">Belum Ditentukan</span>`;
                    actionButtons = `<button class="hapus-btn bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded text-xs font-medium"><i class="fas fa-trash mr-1"></i>Hapus</button>`;
                    break;
                case 'MENUNGGU_PEMBAYARAN':
                    statusBadge = `<span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-amber-100 text-amber-800"><i class="fas fa-clock mr-1"></i>Menunggu Pembayaran</span>`;
                    paymentStatus = `<span class="text-sm text-gray-600">${formatCurrency(pengajuan.total_biaya)}</span>`;
                    actionButtons = `<button class="bayar-btn bg-green-600 hover:bg-green-700 text-white px-3 py-1 rounded text-xs font-medium"><i class="fas fa-credit-card mr-1"></i>Bayar</button> <button class="hapus-btn bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded text-xs font-medium"><i class="fas fa-trash mr-1"></i>Hapus</button>`;
                    break;
                case 'VERIFIKASI_PEMBAYARAN':
                    statusBadge = `<span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800"><i class="fas fa-search mr-1"></i>Verifikasi Pembayaran</span>`;
                    paymentStatus = `<span class="text-sm text-blue-600 font-medium"><i class="fas fa-clock mr-1"></i>Verifikasi</span>`;
                    actionButtons = `<button disabled class="bg-gray-300 text-gray-500 px-3 py-1 rounded text-xs font-medium cursor-not-allowed"><i class="fas fa-trash mr-1"></i>Hapus</button>`;
                    break;
                case 'SELESAI':
                    statusBadge = `<span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800"><i class="fas fa-check mr-1"></i>Selesai</span>`;
                    paymentStatus = `<span class="text-sm text-green-600 font-medium"><i class="fas fa-check-circle mr-1"></i>Lunas</span>`;
                    actionButtons = `<button class="unduh-btn bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded text-xs font-medium"><i class="fas fa-download mr-1"></i>Unduh Surat</button>`;
                    break;
                default:
                    statusBadge = `<span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">Tidak Diketahui</span>`;
                    break;
            }
            return `
                <td class="px-6 py-4 whitespace-nowrap"><div class="text-sm font-medium text-gray-900">${pengajuan.nomor_pengajuan}</div></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">${formatDate(pengajuan.tanggal_pengajuan)}</td>
                <td class="px-6 py-4 whitespace-nowrap">${paymentStatus}</td>
                <td class="px-6 py-4 whitespace-nowrap">${statusBadge}</td>
                <td class="px-6 py-4 whitespace-nowrap"><div class="flex space-x-2">${actionButtons}</div></td>
            `;
        }

        function showDeleteModal(id) {
            pengajuanIdToDelete = id;
            deleteModal.querySelector('h3').textContent = `Hapus Pengajuan #${id}`;
            deleteModal.classList.remove('hidden');
            deleteModal.classList.add('flex');
        }

        function hideDeleteModal() {
            deleteModal.classList.add('hidden');
            deleteModal.classList.remove('flex');
            pengajuanIdToDelete = null;
        }

        function showCreateModal() {
            createModal.classList.remove('hidden');
            createModal.classList.add('flex');
        }

        function hideCreateModal() {
            createModal.classList.add('hidden');
            createModal.classList.remove('flex');
        }

            
        function showWarningModal(message) {
            warningMessage.textContent = message;
            warningModal.classList.remove('hidden');
            warningModal.classList.add('flex');
        }

        function hideWarningModal() {
            warningModal.classList.add('hidden');
            warningModal.classList.remove('flex');
        }

        function showSuccessNotification(message) {
            const el = document.createElement('div');
            el.className = 'fixed top-4 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg z-50 transform translate-x-full transition-transform duration-300';
            el.innerHTML = `<div class="flex items-center"><i class="fas fa-check-circle mr-2"></i><span>${message}</span></div>`;
            document.body.appendChild(el);
            setTimeout(() => el.classList.remove('translate-x-full'), 100);
            setTimeout(() => {
                el.classList.add('translate-x-full');
                setTimeout(() => document.body.removeChild(el), 300);
            }, 3000);
        }

        function checkEmptyTable() {
            if (tableBody.children.length === 0) showEmptyState();
        }

        function showEmptyState() {
            const tableBody = document.getElementById('riwayat-table-body');
            if (tableBody) {
                // Buat satu baris tabel yang berisi pesan
                tableBody.innerHTML = `
                    <tr>
                        <td colspan="5" class="text-center py-10 text-gray-500">
                            <div class="flex flex-col items-center">
                                <i class="fas fa-file-alt text-3xl mb-2"></i>
                                <span>Belum ada pengajuan</span>
                            </div>
                        </td>
                    </tr>
                `;
            }
        }
    });
</script>
